.row
  .col-lg-12
    .page-header
      %h1
        List of Users
.row
  .col-lg-12
    %table{class: 'table table-striped table-hover'}
      %thead
        %tr
          %th
            Id
          %th
            Name
          %th
            DoB
          %th
            Location
          %th
            Oauth Access Tokens
      %tbody
        - @users.each do |user|
          %tr
            %td
              = user.id
            %td
              = link_to user.name, public_profile_path(user.profile.friendly_id.downcase)
            %td
              = user.profile.dob.in_time_zone.to_formatted_s(:dob_mdy)
            %td
              = user.profile.location
            %td
              = link_to 'Oauth Access Tokens', oauth_access_tokens_admin_user_path(user.id)
