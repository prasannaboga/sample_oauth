%header
  %nav.navbar.navbar-default
    .container-fluid
      .navbar-header
        %button.navbar-toggle.collapsed{"data-target" => "#sample-oauth-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{href: root_path} SampleOauth
      #sample-oauth-navbar-collapse-1.collapse.navbar-collapse
        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            %li{id: 'profile'}
              = link_to 'Profile', profile_path
            %li
              = link_to 'Logout', destroy_user_session_path, method: :delete
          - else
            %li{id: 'registration'}
              = link_to 'Registration', new_user_registration_path
            %li{id: 'login'}
              = link_to 'Login', new_user_session_path
